{
  "id": "press-release",
  "shortName": "press-release",
  "name": "Press Release Generator",
  "description": "Create professional press releases with AI-powered research, tone analysis, and fact-checking",
  "config": {
    "setTitleFromStageOutput": "generate-headline",
    "finalOutputStageId": "generate-html-preview",
    "autoScroll": {
      "enabled": true,
      "scrollToAutorun": true,
      "scrollToManual": true
    },
    "progressAnimation": {
      "dynamicSpeed": true,
      "singleCycle": false
    },
    "showThinking": false
  },
  "stages": [
    {
      "id": "basic-info",
      "name": "Basic Information",
      "description": "Provide the core details for your press release",
      "inputType": "form",
      "outputType": "json",
      "model": "gemini-2.0-flash",
      "temperature": 0.3,
      "formFields": [
        {
          "name": "company",
          "label": "Company Name",
          "type": "text",
          "placeholder": "e.g., TechCorp Inc.",
          "validation": {
            "required": true
          }
        },
        {
          "name": "topic",
          "label": "Announcement Topic",
          "type": "text",
          "placeholder": "e.g., New Product Launch, Partnership Announcement",
          "validation": {
            "required": true
          }
        },
        {
          "name": "message",
          "label": "Key Message",
          "type": "textarea",
          "placeholder": "Describe what you're announcing and why it matters...",
          "validation": {
            "required": true,
            "minLength": 50
          }
        },
        {
          "name": "website",
          "label": "Company Website",
          "type": "text",
          "placeholder": "e.g., https://example.com",
          "validation": {
            "required": false
          }
        },
        {
          "name": "location",
          "label": "Company Location",
          "type": "text",
          "placeholder": "e.g., San Francisco, CA",
          "validation": {
            "required": true
          }
        }
      ]
    },
    {
      "id": "tone-materials",
      "name": "Reference Materials",
      "description": "Upload existing press releases or company materials to match your tone (optional)",
      "inputType": "context",
      "outputType": "json",
      "activationDependencies": [],
      "autoRun": false,
      "isOptional": true,
      "editEnabled": true
    },
    {
      "id": "research-urls",
      "name": "Research URLs",
      "description": "Add URLs for deeper research and fact verification (optional)",
      "inputType": "form",
      "outputType": "json",
      "activationDependencies": [],
      "autoRun": false,
      "isOptional": true,
      "formFields": [
        {
          "name": "urls",
          "label": "Research URLs",
          "type": "textarea",
          "placeholder": "Add URLs (one per line):\n- Company investor pages\n- Recent press releases\n- Industry reports\n- News articles",
          "validation": {
            "required": false
          }
        },
        {
          "name": "focus",
          "label": "Research Focus",
          "type": "select",
          "defaultValue": "comprehensive",
          "options": [
            { "value": "comprehensive", "label": "Comprehensive Analysis" },
            { "value": "financial", "label": "Financial Performance" },
            { "value": "competitive", "label": "Competitive Intelligence" },
            { "value": "technical", "label": "Technical Innovation" },
            { "value": "market", "label": "Market Trends" }
          ],
          "validation": {
            "required": true
          }
        }
      ]
    },
    {
      "id": "key-facts-upload",
      "name": "Supporting Documents",
      "description": "Upload any supporting documents, data sheets, or reports (optional)",
      "inputType": "context",
      "outputType": "json",
      "activationDependencies": [],
      "autoRun": false,
      "isOptional": true,
      "editEnabled": true
    },
    {
      "id": "contact-preferences",
      "name": "Contact Preferences",
      "description": "Specify media contact preferences (optional)",
      "inputType": "form",
      "outputType": "json",
      "activationDependencies": [],
      "autoRun": false,
      "isOptional": true,
      "formFields": [
        {
          "name": "department",
          "label": "Department",
          "type": "select",
          "defaultValue": "communications",
          "options": [
            { "value": "communications", "label": "Communications/PR" },
            { "value": "marketing", "label": "Marketing" },
            { "value": "investor", "label": "Investor Relations" },
            { "value": "executive", "label": "Executive Office" }
          ],
          "validation": {
            "required": true
          }
        },
        {
          "name": "includeAgency",
          "label": "Include PR Agency Contact",
          "type": "select",
          "defaultValue": "no",
          "options": [
            { "value": "yes", "label": "Yes - Include agency contact" },
            { "value": "no", "label": "No - Internal contact only" }
          ],
          "validation": {
            "required": true
          }
        }
      ]
    },
    {
      "id": "tone-analysis",
      "name": "Tone & Style Analysis",
      "description": "AI analyzes your company's communication style",
      "inputType": "none",
      "outputType": "json",
      "model": "gemini-2.0-flash",
      "temperature": 0.4,
      "activationDependencies": ["basic-info"],
      "autorunDependencies": ["basic-info", "tone-materials"],
      "autoRun": true,
      "aiRedoEnabled": true,
      "editEnabled": true,
      "promptFile": "prompts/tone-analysis.md",
      "jsonFields": [
        { "key": "tone", "label": "Communication Tone", "type": "textarea", "displayOrder": 1 },
        { "key": "style", "label": "Writing Style", "type": "textarea", "displayOrder": 2 },
        { "key": "phrases", "label": "Key Phrases", "type": "textarea", "displayOrder": 3 },
        { "key": "formatting", "label": "Formatting Notes", "type": "textarea", "displayOrder": 4 }
      ]
    },
    {
      "id": "company-research",
      "name": "Company & Industry Research",
      "description": "AI researches company background and industry context",
      "inputType": "none",
      "outputType": "json",
      "model": "gemini-2.0-flash",
      "temperature": 0.3,
      "activationDependencies": ["basic-info"],
      "autorunDependencies": ["tone-analysis", "research-urls"],
      "autoRun": true,
      "aiRedoEnabled": true,
      "editEnabled": true,
      "grounding": {
        "googleSearch": true,
        "urlContext": true
      },
      "promptFile": "prompts/company-research.md",
      "jsonFields": [
        { "key": "background", "label": "Company Background", "type": "textarea", "displayOrder": 1 },
        { "key": "industry", "label": "Industry Context", "type": "textarea", "displayOrder": 2 },
        { "key": "recent", "label": "Recent Developments", "type": "textarea", "displayOrder": 3 },
        { "key": "relevance", "label": "Market Relevance", "type": "textarea", "displayOrder": 4 }
      ]
    },
    {
      "id": "generate-headline",
      "name": "Generate Headline & Key Facts",
      "description": "AI creates newsworthy headline and key facts",
      "inputType": "none",
      "outputType": "json",
      "model": "gemini-2.0-flash",
      "temperature": 0.3,
      "activationDependencies": ["basic-info", "tone-analysis", "company-research"],
      "autorunDependencies": ["company-research", "key-facts-upload"],
      "autoRun": true,
      "aiRedoEnabled": true,
      "editEnabled": true,
      "promptFile": "prompts/generate-headline.md",
      "jsonFields": [
        { "key": "headline", "label": "Main Headline", "type": "text", "displayOrder": 1 },
        { "key": "subheadline", "label": "Subheadline", "type": "text", "displayOrder": 2 },
        { "key": "keyPoints", "label": "Key Points", "type": "textarea", "displayOrder": 3 },
        { "key": "quotes", "label": "Executive Quotes", "type": "textarea", "displayOrder": 4 },
        { "key": "statistics", "label": "Key Statistics", "type": "textarea", "displayOrder": 5 }
      ],
      "copyable": true
    },
    {
      "id": "generate-contacts",
      "name": "Generate Contact Information",
      "description": "AI creates appropriate media contact details",
      "inputType": "none",
      "outputType": "json",
      "model": "gemini-2.0-flash",
      "temperature": 0.2,
      "activationDependencies": ["generate-headline"],
      "autorunDependencies": ["generate-headline", "contact-preferences"],
      "autoRun": true,
      "aiRedoEnabled": true,
      "editEnabled": true,
      "promptFile": "prompts/generate-contacts.md",
      "jsonFields": [
        { "key": "name", "label": "Contact Name", "type": "text", "displayOrder": 1 },
        { "key": "title", "label": "Title", "type": "text", "displayOrder": 2 },
        { "key": "email", "label": "Email", "type": "text", "displayOrder": 3 },
        { "key": "phone", "label": "Phone", "type": "text", "displayOrder": 4 },
        { "key": "additional", "label": "Additional Contacts", "type": "textarea", "displayOrder": 5 }
      ]
    },
    {
      "id": "fact-check",
      "name": "Fact-Check & Verification",
      "description": "AI verifies all claims and statistics",
      "inputType": "none",
      "outputType": "json",
      "model": "gemini-2.0-flash",
      "temperature": 0.1,
      "activationDependencies": ["generate-contacts"],
      "autorunDependencies": ["generate-contacts"],
      "autoRun": true,
      "aiRedoEnabled": true,
      "editEnabled": true,
      "grounding": {
        "googleSearch": true
      },
      "promptFile": "prompts/fact-check.md",
      "jsonFields": [
        { "key": "verified", "label": "Verified Facts", "type": "textarea", "displayOrder": 1 },
        { "key": "concerns", "label": "Concerns", "type": "textarea", "displayOrder": 2 },
        { "key": "suggestions", "label": "Suggestions", "type": "textarea", "displayOrder": 3 },
        { "key": "status", "label": "Approval Status", "type": "text", "displayOrder": 4 }
      ]
    },
    {
      "id": "final-press-release",
      "name": "Generate Final Press Release",
      "description": "Create the complete press release document",
      "inputType": "none",
      "outputType": "markdown",
      "model": "gemini-2.0-flash",
      "temperature": 0.3,
      "activationDependencies": ["fact-check"],
      "autorunDependencies": ["fact-check"],
      "autoRun": true,
      "aiRedoEnabled": true,
      "editEnabled": true,
      "copyable": true,
      "promptFile": "prompts/final-press-release-complete.md"
    },
    {
      "id": "press-photo-briefing",
      "name": "Press Photo Briefing",
      "description": "Specify the type of image to accompany your press release",
      "inputType": "none",
      "outputType": "json",
      "activationDependencies": ["final-press-release"],
      "autorunDependencies": ["final-press-release"],
      "autoRun": true,
      "isOptional": true,
      "promptFile": "prompts/press-photo-briefing.md",
      "jsonFields": [
        {
          "key": "imageType",
          "label": "Image Type",
          "type": "text",
          "displayOrder": 1
        },
        {
          "key": "description",
          "label": "Image Description",
          "type": "textarea",
          "displayOrder": 2
        },
        {
          "key": "aspectRatio",
          "label": "Aspect Ratio",
          "type": "text",
          "displayOrder": 3
        },
        {
          "key": "numberOfImages",
          "label": "Number of Images",
          "type": "text",
          "displayOrder": 4
        }
      ]
    },
    {
      "id": "create-press-image-prompt",
      "name": "Create Press Image Prompt",
      "description": "AI will create optimized imagen prompts for your press release images",
      "inputType": "none",
      "outputType": "json",
      "activationDependencies": ["final-press-release", "press-photo-briefing"],
      "autorunDependencies": ["press-photo-briefing"],
      "autoRun": true,
      "temperature": 0.7,
      "promptFile": "prompts/create-press-image-prompt.md",
      "jsonFields": [
        {
          "key": "imagenPrompt",
          "label": "Optimized Imagen Prompt",
          "type": "textarea",
          "displayOrder": 1
        },
        {
          "key": "filenames",
          "label": "Generated Filenames",
          "type": "text",
          "displayOrder": 2
        }
      ],
      "aiRedoEnabled": true
    },
    {
      "id": "generate-press-photo",
      "name": "Generate Press Photo",
      "description": "AI creates professional images for your press release",
      "inputType": "none",
      "outputType": "image",
      "activationDependencies": ["create-press-image-prompt"],
      "autorunDependencies": ["create-press-image-prompt"],
      "autoRun": true,
      "model": "imagen-3.0-generate-002",
      "promptFile": "prompts/generate-press-photo.md",
      "imageGenerationSettings": {
        "provider": "imagen",
        "aspectRatio": "{{press-photo-briefing.output.aspectRatio}}",
        "numberOfImages": "{{press-photo-briefing.output.numberOfImages}}",
        "filenames": "{{create-press-image-prompt.output.filenames}}",
        "imagen": {
          "personGeneration": "allow_adult"
        }
      },
      "hideImageMetadata": true
    },
    {
      "id": "generate-html-preview",
      "name": "Generate HTML Preview",
      "description": "Create a beautiful HTML preview of your press release with embedded images",
      "inputType": "none",
      "outputType": "html",
      "model": "gemini-2.0-flash",
      "temperature": 0.3,
      "activationDependencies": ["final-press-release", "generate-press-photo"],
      "autorunDependencies": ["final-press-release", "generate-press-photo"],
      "autoRun": true,
      "aiRedoEnabled": true,
      "promptFile": "prompts/generate-html-preview.md"
    },
    {
      "id": "export",
      "title": "Export & Publish",
      "description": "Transform your press release into professional formats and publish instantly",
      "stageType": "export",
      "inputType": "none",
      "outputType": "export-interface",
      "activationDependencies": ["generate-html-preview"],
      "autoRun": false,
      "showAsHero": true,
      "triggerButton": {
        "label": "Export & Publish Press Release",
        "variant": "hero",
        "size": "large",
        "description": "Create professional exports and shareable links"
      },
      "exportConfig": {
        "aiModel": "gemini-2.0-flash",
        "temperature": 0.3,
        "formats": {
          "html-styled": {
            "enabled": true,
            "label": "Professional Press Release",
            "description": "Beautiful HTML presentation with press release formatting and images",
            "promptFile": "prompts/html-styled-template.md",
            "features": [
              "Professional press layout",
              "Embedded press images",
              "Responsive design",
              "Print optimized",
              "Corporate typography"
            ]
          },
          "html-clean": {
            "enabled": true,
            "label": "Clean HTML",
            "description": "Semantic HTML perfect for websites and CMS with images",
            "promptFile": "prompts/html-clean-template.md",
            "features": [
              "Perfect press structure",
              "Embedded press images", 
              "CMS-friendly markup",
              "Accessibility compliant",
              "SEO optimized"
            ]
          },
          "markdown": {
            "enabled": true,
            "label": "Markdown",
            "description": "Formatted markdown for GitHub, Notion, and more",
            "deriveFrom": "html-clean",
            "options": {
              "flavor": "github",
              "preserveHtml": false
            }
          },
          "pdf": {
            "enabled": true,
            "label": "PDF Press Release",
            "description": "Professional PDF with corporate formatting and images",
            "deriveFrom": "html-styled"
          },
          "docx": {
            "enabled": true,
            "label": "Word Document", 
            "description": "Microsoft Word format with styles and images",
            "deriveFrom": "html-styled"
          }
        },
        "publishing": {
          "enabled": true,
          "instant": true,
          "baseUrl": "/published",
          "formats": ["html-styled", "html-clean"],
          "features": {
            "seo": {
              "noindex": true,
              "openGraph": true,
              "twitterCard": true,
              "structuredData": true
            },
            "sharing": {
              "shortUrls": true,
              "qrCode": true,
              "socialButtons": true
            },
            "protection": {
              "public": true,
              "expiration": {
                "default": "never"
              }
            },
            "branding": {
              "showLogo": true,
              "poweredBy": "Created with Franz AI Writer"
            }
          }
        },
        "styling": {
          "defaultView": "styled",
          "themes": {
            "default": "professional",
            "options": ["professional", "corporate", "modern", "classic", "news", "executive"]
          },
          "customization": {
            "fonts": {
              "heading": "system-ui, -apple-system, BlinkMacSystemFont, sans-serif",
              "body": "system-ui, -apple-system, BlinkMacSystemFont, sans-serif"
            },
            "colors": {
              "primary": "#0066cc",
              "background": "#ffffff",
              "text": "#1a1a1a",
              "accent": "#f8f9fa"
            }
          }
        }
      }
    }
  ]
}